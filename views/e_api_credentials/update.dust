{>"layout_m_authentication"/}
{<header}
    <h1>{@__ key="module.m_authentication"/}<small>{@__ key="module.module"/}</small></h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i>{@__ key="module.home"/}</a></li>
        <li class="active">{@__ key="module.m_authentication"/}</li>
    </ol>
{/header}
{<content}
    <div class="row">
        <div class="col-xs-12 connectedSortable">
            <form action="/api_credentials/update" method="post">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">{@__ key="operation.update"/} {@__ key="entity.e_api_credentials.name_entity"/}</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label for="id">{@__ key="entity.e_api_credentials.id_entity"/} {@__ key="entity.e_api_credentials.name_entity"/}</label>
                            <input name="id" type="hidden" placeholder="{e_api_credentials.id_entity}" value="{e_api_credentials.id}" class="form-control input"/>
                            <input name="id_display" type="text" placeholder="{e_api_credentials.id_entity}" value="{e_api_credentials.id}" disabled="" class="form-control input"/>
                        </div>
                        {#e_api_credentials}
                            {>"e_api_credentials/update_fields"/}
                        {/e_api_credentials}
                        <div class="form-group">
                            <input name="version" value="{e_api_credentials.version}" type="hidden" placeholder="version" class="form-control input"/>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">{@__ key="button.save"/}</button>
                    </div>
                    {#associationFlag}
                        <input type="hidden" name='associationFlag' value="{.}">
                    {/associationFlag}
                    {#associationSource}
                        <input type="hidden" name='associationSource' value="{.}">
                    {/associationSource}
                    {#associationForeignKey}
                        <input type="hidden" name='associationForeignKey' value="{.}">
                    {/associationForeignKey}
                    {#associationAlias}
                        <input type="hidden" name='associationAlias' value="{.}">
                    {/associationAlias}
                    {#associationUrl}
                        <input type="hidden" name='associationUrl' value="{.}">
                    {/associationUrl}
                </div>
            </form>
        </div>
    </div>
{/content}